<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ScannerFragment">

    <FrameLayout
        android:id="@+id/scanner_sheet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_top_sheet"
        android:elevation="@dimen/elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnusedAttribute">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:textStyle="bold"
            android:text="@string/scan_a_qr"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_title"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scanner_sheet"
        tools:ignore="UseCompoundDrawables">

        <ImageView
        android:id="@+id/the_scanner"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center|top"
        app:srcCompat="@drawable/ic_scan"
        android:contentDescription="Scanner"
        tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:textColor="@color/medicana_light"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="@string/click_to_scan"/>

    </LinearLayout>

    <androidx.camera.view.PreviewView
        android:visibility="gone"
        android:id="@+id/scanner_preview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scanner_sheet" />

</androidx.constraintlayout.widget.ConstraintLayout>

